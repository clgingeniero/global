<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Catalogslide>
            <version>1.5.0.1</version>
        </Magentothem_Catalogslide>
    </modules>
    <frontend>
        <routers>
            <catalogslide>
                <use>standard</use>
                <args>
                    <module>Magentothem_Catalogslide</module>
                    <frontName>catalogslide</frontName>
                </args>
            </catalogslide>
        </routers>
        <layout>
            <updates>
                <catalogslide>
                    <file>catalogslide.xml</file>
                </catalogslide>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<catalogslide>
				<use>admin</use>
				<args>
					<module>Magentothem_Catalogslide</module>
					<frontName>catalogslide</frontName>
				</args>
			</catalogslide>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<magentothem translate="title" module="catalogslide">
				<title>Admin Banners</title>
				<sort_order>71</sort_order>               
				<children>
					<catalogslide translate="title" module="catalogslide">
						<title>Banner catalogo</title>
						<sort_order>4</sort_order>
						<children>
							<items translate="title" module="catalogslide">
								<title>Manage Items</title>
								<sort_order>0</sort_order>
								<action>catalogslide/adminhtml_catalogslide</action>
							</items>
							<configuration>
								<title>Configuration</title>
								<sort_order>1</sort_order>
								<action>adminhtml/system_config/edit/section/catalogslide</action>
							</configuration>
						</children>
					</catalogslide>
				</children>
			</magentothem>
		</menu>
		<layout>
			<updates>
				<catalogslide>
					<file>catalogslide.xml</file>
				</catalogslide>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <catalogslide>
                <class>Magentothem_Catalogslide_Model</class>
                <resourceModel>catalogslide_mysql4</resourceModel>
            </catalogslide>
            <catalogslide_mysql4>
                <class>Magentothem_Catalogslide_Model_Mysql4</class>
                <entities>
                    <catalogslide>
                        <table>catalogslide</table>
                    </catalogslide>
                </entities>
            </catalogslide_mysql4>
        </models>
        <resources>
            <catalogslide_setup>
                <setup>
                    <module>Magentothem_Catalogslide</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </catalogslide_setup>
            <catalogslide_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </catalogslide_write>
            <catalogslide_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </catalogslide_read>
        </resources>
        <blocks>
            <catalogslide>
                <class>Magentothem_Catalogslide_Block</class>
            </catalogslide>
        </blocks>
        <helpers>
            <catalogslide>
                <class>Magentothem_Catalogslide_Helper</class>
            </catalogslide>
        </helpers>
    </global>
	<default>
		<catalogslide>
			<catalogslide_config>
				<enabled>1</enabled>
				<animation>fadeZoom</animation>
				<width>600</width>
				<height>250</height>
				<speed>1000</speed>
				<interval>4000</interval>
				<qty_item>4</qty_item>
				<next_back>1</next_back>
			</catalogslide_config>
		</catalogslide>
	</default>
</config>